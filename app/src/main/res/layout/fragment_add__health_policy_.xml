                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/black"
                    android:textColorHint="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TTD Sum Assured"
                    android:id="@+id/TTD_Change"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/policy_form_text_field_seven"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:autofillHints=""
                    android:background="@drawable/shapemob"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:textSize="@dimen/_15sdp"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/black"
                    android:textColorHint="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Policy Date"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/policy_form_text_field_eight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:autofillHints=""
                    android:background="@drawable/shapemob"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="date"
                    android:textSize="@dimen/_15sdp"
                    android:importantForAutofill="no"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/black"
                    android:textColorHint="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Policy Start Date"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/policy_form_text_field_nine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:autofillHints=""
                    android:background="@drawable/shapemob"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_15sdp"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:inputType="date"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/black"
                    android:textColorHint="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Policy End Date"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/policy_form_text_field_ten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:autofillHints=""
                    android:background="@drawable/shapemob"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_15sdp"
                    android:importantForAutofill="no"
                    android:inputType="date|time"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/black"
                    android:textColorHint="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Members Insured"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <LinearLayout
                android:id="@+id/items_container"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:gravity="center">
                    <EditText
                        android:id="@+id/policy_form_text_field_twelve"
                        android:layout_width="0dp"
                        android:layout_weight="1.3"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:background="@drawable/shapemob"
                        android:drawablePadding="@dimen/_10sdp"
                        android:gravity="center"
                        android:textSize="@dimen/_15sdp"
                        android:importantForAutofill="no"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/black"
                        android:textColorHint="@color/black" />
                    <Button
                        android:id="@+id/add_mamber"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@drawable/shapelogin"
                        android:padding="@dimen/_5sdp"
                        android:shadowColor="@android:color/transparent"
                        android:text="Add MORE"
                        android:textColor="@color/white" />
                </LinearLayout>



                <Button
                    android:id="@+id/add_policy"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/shapelogin"
                    android:padding="@dimen/_10sdp"
                    android:shadowColor="@android:color/transparent"
                    android:text="Add Policy"
                    android:textColor="@color/white" />


            </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>