<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Lohia.investment.PolicyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="@dimen/_50sdp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/customButton"
            android:layout_width="@dimen/_157sdp"
            android:layout_height="70dp"
            android:background="@drawable/shapeinsurance"
            android:elevation="@dimen/_16sdp"
            android:text="@string/insurance"
            android:textSize="@dimen/_15sdp"
            android:textColor="#FFFFFF"
            />

        <Button
            android:id="@+id/redbutton"
            android:layout_width="@dimen/_159sdp"
            android:layout_height="70dp"
            android:background="@drawable/shapepolicy"
            android:elevation="@dimen/_16sdp"
            android:text="@string/policy"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_15sdp"
            tools:ignore="VisualLintBounds" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Coming Soon"
        android:textSize="@dimen/_35sdp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:gravity="center"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="#4B4545"
        android:text="@string/notification"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        />

</FrameLayout>