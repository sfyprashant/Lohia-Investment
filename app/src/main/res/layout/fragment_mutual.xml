<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.Lohia.investment.mutualFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/wealth"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:orientation="vertical"
            android:background="#A4000000"
            android:layout_marginRight="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_height="@dimen/_130sdp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/wealth"
                android:contentDescription="@string/nj_e_wealth_account" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/nj_e_wealth_account"
                android:textColor="@color/ic_launcher_background"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/client"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp"
            android:background="#A4000000"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_height="@dimen/_130sdp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/client"
                android:contentDescription="@string/nj_client_desk" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/nj_client_desk"
                android:textColor="@color/ic_launcher_background"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />
        </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_6sdp"
        android:id="@+id/google_form_2"
        android:text="@string/are_you_financially_free"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/snapeloginblue"
        android:textColor="@color/white"
        android:textStyle="bold" />


</LinearLayout>