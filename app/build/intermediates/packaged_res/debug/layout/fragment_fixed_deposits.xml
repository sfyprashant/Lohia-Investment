<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.Lohia.investment.FixedDepositsFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fixed Deposits From"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/text_field_one"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/shapemob"
                            android:drawablePadding="@dimen/_10sdp"
                            android:gravity="center"
                            android:imeOptions="actionDone"
                            android:importantForAutofill="no"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fixed Deposits Type"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/text_field_two"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/shapemob"
                            android:drawablePadding="@dimen/_10sdp"
                            android:gravity="center"
                            android:imeOptions="actionDone"
                            android:importantForAutofill="no"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/_15sdp" />

                        <LinearLayout
                            android:id="@+id/three_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Organization/ Location"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_15sdp"
                                    android:textStyle="bold" />

                                <Spinner
                                    android:id="@+id/text_field_three_spinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:background="@drawable/shapemob"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:imeOptions="actionDone"
                                    android:importantForAutofill="no"
                                    android:inputType="text"
                                    android:textColor="@color/black"
                                    android:textColorHighlight="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textSize="@dimen/_15sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/three_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Organization/ Location"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_15sdp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/text_field_three_edit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:autofillHints=""
                                    android:background="@drawable/shapemob"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:imeOptions="actionDone"
                                    android:importantForAutofill="no"
                                    android:inputType="text"
                                    android:padding="@dimen/_10sdp"
                                    android:textColor="@color/black"
                                    android:textColorHighlight="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textSize="@dimen/_15sdp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Frequency of Interest"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/text_field_four"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/shapemob"
                            android:drawablePadding="@dimen/_10sdp"
                            android:gravity="center"
                            android:imeOptions="actionDone"
                            android:importantForAutofill="no"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FDR No."
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/text_field_five"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:autofillHints=""
                            android:background="@drawable/shapemob"
                            android:drawablePadding="@dimen/_10sdp"
                            android:gravity="center"
                            android:imeOptions="actionDone"
                            android:importantForAutofill="no"
                            android:inputType="text"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Interest Rate (in %)"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/text_field_six"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:autofillHints=""
                            android:background="@drawable/shapemob"
                            android:drawablePadding="@dimen/_10sdp"
                            android:gravity="center"
                            android:imeOptions="actionDone"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal|number"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Investment Amount"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/text_field_seven"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:autofillHints=""
                            android:background="@drawable/shapemob"
                            android:drawablePadding="@dimen/_10sdp"
                            android:gravity="center"
                            android:imeOptions="actionDone"
                            android:importantForAutofill="no"
                            android:inputType="number"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Maturity Date"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_field_eight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:autofillHints=""
                            android:background="@drawable/shapemob"
                            android:drawablePadding="@dimen/_10sdp"
                            android:gravity="center"
                            android:imeOptions="actionDone"
                            android:importantForAutofill="no"
                            android:inputType="text"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Maturity Amount"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/text_field_nine"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:autofillHints=""
                            android:background="@drawable/shapemob"
                            android:drawablePadding="@dimen/_10sdp"
                            android:gravity="center"
                            android:imeOptions="actionDone"
                            android:importantForAutofill="no"
                            android:inputType="number"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nominee Name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/text_field_ten"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:autofillHints=""
                            android:background="@drawable/shapemob"
                            android:drawablePadding="@dimen/_10sdp"
                            android:gravity="center"
                            android:imeOptions="actionDone"
                            android:importantForAutofill="no"
                            android:inputType="text"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/_15sdp" />

                        <Button
                            android:id="@+id/add_FD_BTN"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_30sdp"
                            android:background="@drawable/shapelogin"
                            android:padding="@dimen/_10sdp"
                            android:shadowColor="@android:color/transparent"
                            android:text="Add Fixed Deposit"
                            android:textColor="@color/white" />
                </LinearLayout>
        </ScrollView>
</LinearLayout>